<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.profileremover.ui.SettingsController" hgap="8" vgap="8" padding="10">
    <columnConstraints>
        <ColumnConstraints percentWidth="35" />
        <ColumnConstraints percentWidth="65" />
    </columnConstraints>
    <children>
        <Label text="PSTools dir" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="pstoolsDir" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Connect timeout (s)" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Spinner fx:id="connectTimeout" editable="true" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="5" max="600" initialValue="30" />
            </valueFactory>
        </Spinner>

        <Label text="Exec timeout (s)" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Spinner fx:id="execTimeout" editable="true" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="30" max="3600" initialValue="180" />
            </valueFactory>
        </Spinner>

        <Label text="LDAP host" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="ldapHost" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="LDAP port" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <Spinner fx:id="ldapPort" editable="true" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="65535" initialValue="636" />
            </valueFactory>
        </Spinner>

        <Label text="Bind DN" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <TextField fx:id="ldapBindDn" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Password" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <PasswordField fx:id="ldapPassword" GridPane.rowIndex="6" GridPane.columnIndex="1" />

        <Label text="Base DN" GridPane.rowIndex="7" GridPane.columnIndex="0" />
        <TextField fx:id="baseDn" GridPane.rowIndex="7" GridPane.columnIndex="1" />

        <Label text="Display attr" GridPane.rowIndex="8" GridPane.columnIndex="0" />
        <TextField fx:id="displayAttr" GridPane.rowIndex="8" GridPane.columnIndex="1" />

        <Label text="Allow-list host (csv)" GridPane.rowIndex="9" GridPane.columnIndex="0" />
        <TextField fx:id="allowedHosts" GridPane.rowIndex="9" GridPane.columnIndex="1" />

        <HBox spacing="8" GridPane.rowIndex="10" GridPane.columnIndex="1">
            <Button fx:id="saveBtn" text="Salva" onAction="#onSave" />
            <Button fx:id="cancelBtn" text="Annulla" onAction="#onCancel" />
        </HBox>
    </children>
</GridPane>


